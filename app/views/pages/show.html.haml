/ %p#notice= notice
/ %p
/   %strong Book:
/   = @page.order
/ %p
/   %strong Url:
/   = @page.url
/ %p
/   %strong title:
/   = @page.title
/ %p
/   %strong thumbnail:
/   %img{:src => "data:text/plain;base64, #{@page.thumbnail}"}/

%article#main
  #resize
    .items
      - @orders.each do |order|
        .item
          %img{:src => "data:text/plain;base64, #{order.image.data}"}/

= link_to 'Edit', edit_book_page_path(@book, @page.order)
|
= link_to 'Back', book_pages_path(@book)

:javascript
  $(function(){
    $('#resize').resizable({
      containment: "#main",
      minWidth: 240
    })
  })


